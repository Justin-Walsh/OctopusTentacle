<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>Octopus.Shared</RootNamespace>
    <AssemblyName>Octopus.Shared</AssemblyName>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <TargetFrameworks>net45;netstandard2.0</TargetFrameworks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <OutputPath>bin\</OutputPath>
    <DisableImplicitPackageTargetFallback>true</DisableImplicitPackageTargetFallback>
    <Description>The library shared by Octopus Server and Octopus Tentacle.</Description>
    <Authors>Octopus Deploy</Authors>
    <PackageIconUrl>http://i.octopusdeploy.com/resources/Avatar3_360.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/OctopusDeploy/OctopusDeploy</PackageProjectUrl>
    <RepositoryUrl>https://github.com/OctopusDeploy/OctopusDeploy.git</RepositoryUrl>
    <Optimize Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">True</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <DefineConstants>$(DefineConstants);HAS_SYSTEM_IDENTITYMODEL_TOKENS;NLOG_HAS_EVENT_LOG_TARGET;NETFX</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <DefineConstants>$(DefineConstants);REQUIRES_EXPLICIT_LOG_CONFIG</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Startup\PathsToDeleteOnStartup.core.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Halibut" Version="3.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
    <PackageReference Include="Autofac" Version="4.6.2" />
    <PackageReference Include="NuGet.Common" Version="3.6.0-octopus-58676" />
    <PackageReference Include="NuGet.Frameworks" Version="3.6.0-octopus-58676" />
    <PackageReference Include="NuGet.Packaging" Version="3.6.0-octopus-58676" />
    <PackageReference Include="NuGet.Packaging.Core" Version="3.6.0-octopus-58676" />
    <PackageReference Include="NuGet.Packaging.Core.Types" Version="3.6.0-octopus-58676" />
    <PackageReference Include="NuGet.Versioning" Version="3.6.0-octopus-58676" />
    <PackageReference Include="Octopus.Configuration" Version="1.0.11" />
    <PackageReference Include="Octopus.Diagnostics" Version="1.0.12" />
    <PackageReference Include="Octopus.Time" Version="1.1.2" />
    <PackageReference Include="TaskScheduler" Version="2.7.2" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFrameworkIdentifier)' == '.NETStandard' ">
    <PackageReference Include="System.Data.SqlClient" Version="4.4.0" />
    <PackageReference Include="System.ServiceModel.Primitives" Version="4.4.0" />
    <PackageReference Include="System.IO.FileSystem.AccessControl" Version="4.4.0" />
    <PackageReference Include="System.ServiceProcess.ServiceController" Version="4.5.0-preview1-25914-04" />
    <PackageReference Include="System.Management" Version="4.5.0-preview1-25914-04" />
    <PackageReference Include="NLog" Version="4.5.0-rc03" />
    <PackageReference Include="Nito.AsyncEx" Version="5.0.0-pre-05" />
    <PackageReference Include="System.Diagnostics.EventLog" Version="4.5.0-preview1-25914-04" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFrameworkIdentifier)' == '.NETFramework' ">
    <PackageReference Include="NLog" Version="4.0.1" />
    <PackageReference Include="Nito.AsyncEx" Version="3.0.1" />
    <Reference Include="System" />
    <Reference Include="System.ComponentModel.Composition" />
    <Reference Include="System.ComponentModel.DataAnnotations" />
    <Reference Include="System.Core" />
    <Reference Include="System.Data" />
    <Reference Include="System.Data.Services.Client" />
    <Reference Include="System.DirectoryServices" />
    <Reference Include="System.IdentityModel" />
    <Reference Include="System.IO.Compression" />
    <Reference Include="System.Management" />
    <Reference Include="System.Net" />
    <Reference Include="System.Numerics" />
    <Reference Include="System.Runtime.Caching" />
    <Reference Include="System.Security" />
    <Reference Include="System.ServiceProcess" />
    <Reference Include="System.Web" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Xml" />
    <Reference Include="System.Xml.Linq" />
    <Reference Include="WindowsBase" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Solution Items\SolutionInfo.cs">
      <Link>Properties\SolutionInfo.cs</Link>
    </Compile>
    <Compile Include="..\Solution Items\VersionInfo.cs">
      <Link>Properties\VersionInfo.cs</Link>
    </Compile>
    <EmbeddedResource Include="Internals\Options\_Readme.txt" />
    <EmbeddedResource Include="Internals\CertificateGeneration\_Readme.txt" />
    <EmbeddedResource Include="Internals\DiffMatchPatch\_Readme.txt" />
    <EmbeddedResource Include="Startup\PathsToDeleteOnStartup.core.txt" />
    <EmbeddedResource Include="Startup\PathsToDeleteOnStartup.netfx.txt" />
    <Compile Update="Startup\WindowsServiceAdapter.cs">
      <SubType>Component</SubType>
    </Compile>
  </ItemGroup>
</Project>
